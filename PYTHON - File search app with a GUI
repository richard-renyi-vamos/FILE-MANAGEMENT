import tkinter as tk
from tkinter import filedialog
import os

def search_file():
    target_filename = filename_entry.get()
    search_directory = directory_entry.get()

    if not os.path.exists(search_directory):
        result_label.config(text="Directory not found")
        return

    found_files = []

    for root, dirs, files in os.walk(search_directory):
        for file in files:
            if target_filename in file:
                found_files.append(os.path.join(root, file))

    if found_files:
        result_label.config(text="Found files:\n" + "\n".join(found_files))
    else:
        result_label.config(text="No files found")

def browse_directory():
    directory = filedialog.askdirectory()
    directory_entry.delete(0, tk.END)
    directory_entry.insert(0, directory)

root = tk.Tk()
root.title("File Search")

filename_label = tk.Label(root, text="Enter file name:")
filename_label.pack()

filename_entry = tk.Entry(root)
filename_entry.pack()

directory_label = tk.Label(root, text="Enter search directory:")
directory_label.pack()

directory_entry = tk.Entry(root)
directory_entry.pack()

browse_button = tk.Button(root, text="Browse", command=browse_directory)
browse_button.pack()

search_button = tk.Button(root, text="Search", command=search_file)
search_button.pack()

result_label = tk.Label(root, text="")
result_label.pack()

root.mainloop()


